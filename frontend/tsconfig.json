{
    "include":  [
                    "src"
                ],
    "exclude":  [
                    "**/__tests__/**",
                    "**/*.test.ts",
                    "**/*.test.tsx",
                    "node_modules",
                    "dist",
                    "build",
                    ".next"
                ],
    "compilerOptions":  {
                            "forceConsistentCasingInFileNames":  true,
                            "isolatedModules":  false,
                            "moduleResolution":  "node",
                            "jsx":  "react-jsx",
                            "strict":  true,
                            "target":  "ES2020",
                            "skipLibCheck":  true,
                            "noEmit":  true,
                            "module":  "ESNext",
                            "lib":  [
                                        "ES2020",
                                        "DOM",
                                        "DOM.Iterable"
                                    ],
                            "allowSyntheticDefaultImports":  true,
                            "esModuleInterop":  true,
                            "resolveJsonModule":  true,
                            "allowJs":  true
                        }
}
