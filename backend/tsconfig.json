{
    "include":  [
                    "src"
                ],
    "exclude":  [
                    "**/__tests__/**",
                    "**/*.test.ts",
                    "**/*.test.tsx",
                    "node_modules",
                    "dist",
                    "build",
                    "coverage",
                    "logs",
                    "drizzle/migrations"
                ],
    "compilerOptions":  {
                            "noEmit": false, "outDir": "dist",
                            "strict":  true,
                            "module": "CommonJS",
                            "moduleResolution":  "Node",
                            "skipLibCheck":  true,
                            "esModuleInterop":  true,
                            "target":  "ES2020",
                            "forceConsistentCasingInFileNames":  true
                        }
}

