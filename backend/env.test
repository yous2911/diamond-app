# Test Environment Configuration for Performance Testing
NODE_ENV=test
PORT=3003
HOST=0.0.0.0
TRUST_PROXY=false

# Database Configuration - Mock for testing
DB_HOST=localhost
DB_PORT=3306
DB_USER=test
DB_PASSWORD=test
DB_NAME=test_db
DB_CONNECTION_LIMIT=10

# Redis Configuration - Disabled for testing
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# Security Configuration - Test values
JWT_SECRET=test-secret-key-32-characters-long-for-testing
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=test-refresh-secret-32-characters-long-for-testing
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=test-encryption-key-32-characters-long
COOKIE_SECRET=test-cookie-secret-32-characters-long

# Security settings for test
HTTPS_ONLY=false
SECURE_COOKIES=false
SAME_SITE=lax

# Rate Limiting - More permissive for testing
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_AUTH_MAX=100
RATE_LIMIT_AUTH_WINDOW=60000
RATE_LIMIT_GLOBAL_MAX=50000
RATE_LIMIT_GLOBAL_WINDOW=60000

# DDoS Protection - Relaxed for testing
DDOS_MAX_REQUESTS=5000
DDOS_TIME_WINDOW=60000
DDOS_BAN_DURATION=60000

# CORS Configuration
CORS_ORIGIN=http://localhost:3002,http://localhost:3004
CORS_CREDENTIALS=true

# Performance Settings
REQUEST_TIMEOUT=10000
BODY_LIMIT=10485760

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=2000

# Caching
CACHE_TTL=300
CACHE_MAX_SIZE=500

# Logging
LOG_LEVEL=info
LOG_FORMAT=simple

# GDPR - Simplified for testing
GDPR_ENABLED=false